<odoo>
  <data>
    <!-- View definition for the new model -->
    <record model="ir.ui.view" id="birth_day_email.tree_view">
      <field name="name">BirthDayEmail Tree View</field>
      <field name="model">hr.employee.custom</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="birthday"/>
          <field name="birthday_message_sent"/>
        </tree>
      </field>
    </record>

    <!-- Action to open the tree view -->
    <record model="ir.actions.act_window" id="birth_day_email.action_window">
      <field name="name">BirthDayEmail</field>
      <field name="res_model">hr.employee.custom</field>
      <field name="view_mode">tree</field>
    </record>

    <!-- Menu item to access the view -->
    <menuitem name="BirthDayEmail" id="menu_birth_day_email" parent="hr.menu_hr_root" action="birth_day_email.action_window"/>
  </data>
</odoo>
